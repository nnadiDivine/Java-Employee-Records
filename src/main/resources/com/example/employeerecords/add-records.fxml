<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="recordRoot" layoutX="-2.0" layoutY="1.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeerecords.AddRecords">
   <children>
      <VBox fx:id="box2" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="344.0" style="-fx-background-color: orange;" stylesheets="@style.css">
         <children>
            <TextField fx:id="firstName" promptText="Full Name" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="lastName" promptText="Last Name" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="age" layoutX="20.0" layoutY="114.0" promptText="Age" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <TextField fx:id="salary" layoutX="10.0" layoutY="208.0" promptText="Salary" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <TextField fx:id="department" promptText="Department" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <DatePicker fx:id="date" prefHeight="27.0" prefWidth="341.0" promptText="Date of joining" styleClass="dateArea" stylesheets="@style.css" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></DatePicker>
            <TextField fx:id="address" layoutX="10.0" layoutY="235.0" promptText="Address" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <TextField fx:id="phone" layoutX="20.0" layoutY="302.0" promptText="Phone Number" styleClass="textArea" stylesheets="@style.css">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#submit" prefHeight="25.0" prefWidth="353.0" style="-fx-background-color: #fff;" text="Submit">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="closeRecordBtn" mnemonicParsing="false" onAction="#back" prefHeight="25.0" prefWidth="353.0" style="-fx-background-color: #fff;" text="Back">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox fx:id="box1" prefHeight="200.0" prefWidth="100.0" styleClass="bg2" stylesheets="@style.css" />
   </children>
</HBox>
